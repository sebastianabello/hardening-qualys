FROM node:20-alpine

WORKDIR /app

# pnpm (opcional; si usas npm, borra esto y cambia los comandos)
RUN corepack enable

COPY frontend/package.json frontend/pnpm-lock.yaml* ./
RUN pnpm install --frozen-lockfile || pnpm install

COPY frontend/ ./

EXPOSE 5173
# --host para exponerlo fuera del contenedor
CMD ["npm","run","dev","--","--host","--port","5173"]


